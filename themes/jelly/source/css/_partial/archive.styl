.archives-wrap{
  position: relative;
  margin: 0 30px;
  padding-right: 60px;
  // background: rgba(255,255,255,0.2);
  -webkit-box-shadow: 0px 0px 30px 10px #76827f;
  -moz-box-shadow: 0px 0px 30px 10px #76827f;
  -ms-box-shadow: 0px 0px 30px 10px #76827f;
  -o-box-shadow: 0px 0px 30px 10px #76827f;
  box-shadow: 0px 0px 30px 10px #76827f;
  -webkit-border-radius: 15px;
  -moz-border-radius: 15px;
  -ms-border-radius: 15px;
  -o-border-radius: 15px;
  border-radius: 15px;
  &:first-child{
    margin-top: 30px;
  }
  &:last-child{
    margin-bottom: 80px;
  }
  .archive-year-wrap{
    line-height: 35px;
    width: 200px;
    position: absolute;
    padding-top: 15px;
    font-size: 1.8em;
  }
  .archive-year-wrap a{
    color: #0a4663;
    font-weight: bold;
    padding-left: 48px;
  }
}

.archives {
  position:relative;
  .article-info{
    border: none;
  }
  .archive-article {
    margin-left:200px;
    padding:20px 0;
    border-bottom: 1px solid #eee;
    border-top: 1px solid #fff;
    position: relative;
    &:first-child{
      border-top: none;
    }
    &:last-child{
      border-bottom: none;
    }
  }

  .archive-article-title {
    font-size: 16px;
    font-family: Verdana, Arial, Helvetica, sans-serif;
    letter-spacing: 2px;
    color: #900C3F;
    transition: color 0.3s;
    &:hover{
      color: #7a0ac9;
    }
    span{
      font-size: 12px;
    }
  }
}

.archive-article-inner{
  .archive-article-header{
    position: relative;
  }
  .article-meta{
    position: relative;
    float: right;
    margin-top: -10px;
    color: #555;
    background: none;
    text-align: right;
    width: auto;
    .article-date{
      time{
        color: #2b2a1f;
      }
    }
    .archive-article-date, .article-tag-list{
      margin-right: 30px;
      display: -moz-inline-stack;
      display: inline-block;
      vertical-align: middle;
      zoom: 1;
      color: #2b2a1f;
      font-size: 14px;
    }
    .archive-article-date{
     cursor: default;
     font-size: 12px;
     margin-bottom: 5px;
     margin-top: -10px;
     time{
      &:before {
        content: "\f073";
        color: #2b2a1f;
        position: relative;
        margin-right: 10px;
        font: 16px FontAwesome;
      }
     }
    }
    .article-category{
      &:before{
        float: left;
        margin-top: 1px;
        left: 15px;
      }
      .article-category-link{
        width: auto;
        max-width: 83px;
        padding-left: 10px;
      }
    }
    .article-tag-list{
      margin-top: 0px;
      &:before{
        left: 15px;
      }
      .article-tag-list-item{
        display: inline-block;
        width: auto;
        max-width: 83px;
        padding-left: 8px;
        font-size: 12px;
      }
    }
  }
}
