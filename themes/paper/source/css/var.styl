// rem = 10px chrome 12px
$rem = 62.5%

// colors

if hexo-config("main_color") == "default"
  $color-main = #ebc65a
else if hexo-config("main_color") == "forest"
  $color-main = #6ba8a9
else if hexo-config("main_color") == "grass"
  $color-main = #9dab86
else if hexo-config("main_color") == "sky"
  $color-main = #9be3de
else if hexo-config("main_color") == "sun"
  $color-main = #ffa259
else if hexo-config("main_color") == "sea"
  $color-main = #46b3e6

$color-auxiliary = lighten($color-main, 85%)

$color-black = #222222
$color-black-2 = #333333
$color-black-3 = #444444
$color-gray = #929292
$color-light-gray = #cccccc
$color-white = #ffffff

// text
// font-size
$font-size-s-0 = 1.2rem
$font-size-s-1 = 1.4rem
$font-size-s-2 = 1.6rem
$font-size-s-3 = 1.8rem

$font-size-m-1 = 2.2rem
$font-size-m-2 = 2.8rem
$font-size-m-3 = 3.4rem
$font-size-m-4 = 4.2rem

$font-size-l-1 = 5.2rem
$font-size-l-2 = 6.4rem
$font-size-l-3 = 7.8rem

// line-height
$line-height-s-1 = 2.2rem
$line-height-s-2 = 2.4rem
$line-height-s-3 = 2.6rem

$line-height-m-1 = 3.0rem
$line-height-m-2 = 3.6rem
$line-height-m-3 = 4.4rem
$line-height-m-4 = 5.6rem

$line-height-l-1 = 6.6rem
$line-height-l-2 = 8.2rem
$line-height-l-3 = 10rem

// font-family
$font-family = "Noto Serif SC","SF Pro Text","SF Pro Icons","Helvetica Neue","Helvetica","Arial",sans-serif

// screen
$XXL = 1580px
$XL = 1280px
$L = 1080px
$M = 780px
$S = 580px
$XS = 380px
