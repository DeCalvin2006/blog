.mask-border
  position: relative
  z-index: 10
  pointer-events: none
  &::before
    content: ''
    width: 100%
    height: 100vh
    border: 1rem $color-main solid
    position: fixed
    top: 0
    left: 0

img
  -webkit-user-drag: none;

::selection
  color: $color-white
  background: $color-black-2

// scroll bar style
/* width */
::-webkit-scrollbar {
  width: 6px
  height : 6px
}

/* Track */
::-webkit-scrollbar-track {
  background: transparent
}

/* Handle */
::-webkit-scrollbar-thumb {
  background: $color-light-gray
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
  background: $color-gray
}

@media screen and (max-width: $L)
  .mask-border
    &::before
      border: 0.8rem $color-main solid
